    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <h1>Under construction...</h1>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
