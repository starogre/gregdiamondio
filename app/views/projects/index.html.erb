<h3 class="text-center">Still adding things - work in progress.</h3>

<% if user_signed_in? %>
  <%= render 'form' %>
<% end %>

<% slice_size = 2 %>

<% @projects.each_slice(slice_size) do |proj_slice| %>
  <div class="row">

    <% if proj_slice.size == slice_size %>
      <% proj_slice.each do |project| %>
        <div class="col-md-6">
          <%= render 'node', project: project %>
        </div>
      <% end %>
    <% else %>
      <div class="col-md-offset-3 col-md-6">
        <%= render 'node', project: proj_slice[0] %>
      </div>
    <% end %>
  </div>

<% end %>
