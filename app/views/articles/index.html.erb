<% if user_signed_in? %>
  <%= render 'form' %>
<% end %>

<% @articles.each do |article| %>
  <div class="articleholder">
    <h3 class="date"><%= article.created_at.strftime('%A, %B %d, %Y') %></h3>
    <h2 class="title"><%= article.title %></h2>
    <div class="body">
      <%= article.body %></p>
    </div>

    <% if user_signed_in? %>
      <%= link_to "EDIT", edit_article_path(article) %>
    <% end %>
  </div>
<% end %>
